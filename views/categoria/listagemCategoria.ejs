<%- include('../partials/header.ejs') %>

	<body>

		<div class="container">

			<%- include('../partials/menu.ejs') %>

			<div class="card">
				<div class="card-header">LISTAGEM CATEGORIA</div>
			</div>
			
			<% categorias.forEach(categoria=>{ %>
				<div class="card mt-2 p-1">
					
					<div class="card-body">
						<%= categoria.nome_categoria %>
					</div>

					<div class="btn-group mr-2">
						<a href="/editarCategorias/<%= categoria.id %>" class="btn btn-success btn-sm mr-2 ml-2">EDITAR</a>
						<a href="/excluirCategoria/<%= categoria.id %>" class="btn btn-danger btn-sm mr-2">EXCLUIR</a>
					</div>

				</div>

			<%  }); %>

		</div>

	</body>

	<%- include('../partials/footer.ejs') %>

</html>